#include <stdio.h>
#include <locale.h>

int main() {
    
    char nome[50]; 
    float salario,taxa, novo_salario;
    
    printf("Digite o nome da pessoa: ");
    scanf("%s", nome);
    
     printf("Digite o salario da pessoa: R$");
    scanf("%f", &salario);
    
     printf("Digite o valor do taxa: ");
    scanf("%f", &taxa);
    
    novo_salario =  (salario*taxa)/100; 

    
    printf("Novo salario de %s: R$%.2f\n",nome, novo_salario);
    
    printf("\nDigite o nome da pessoa: ");
    scanf("%s", nome);
    
