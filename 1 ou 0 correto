#include <stdio.h>

int main(){
    int numero;
    for(;;){
        printf("digite um numero:");
        scanf("%d", &numero);
        
        if(numero<=1){
            break;
        }
        else{
            printf("numero incorreto\n");
            
        }
    }
    printf("numero correto\n");
    
    printf("finalizado");
    
    return 0;
}
